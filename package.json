{
  "name": "repo-travel-blog",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --proxy-config proxy.conf.json -o",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "prepare": "husky install",
    "lint": "ng lint",
    "lint:fix": "eslint . --ext .ts,.html --fix",
    "format": "prettier --write .",
    "db": "json-server --watch db.json",
    "docker:dev": "npm ci && npm run build -- --configuration development && docker build -t travel-blog-front:local . && docker run --rm -p 8081:80 travel-blog-front:local",
    "docker:prod": "npm run build -- --configuration production && docker build -t travel-blog-front:prod . && docker run --rm -p 8081:80 travel-blog-front:prod"
  },
  "lint-staged": {
    "**/*.{ts,js,json,scss,html,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@angular/animations": "^20.1.7",
    "@angular/cdk": "^20.1.6",
    "@angular/common": "^20.1.7",
    "@angular/compiler": "^20.1.7",
    "@angular/core": "^20.1.7",
    "@angular/forms": "^20.1.7",
    "@angular/material": "^20.1.6",
    "@angular/platform-browser": "^20.1.7",
    "@angular/platform-browser-dynamic": "^20.1.7",
    "@angular/router": "^20.1.7",
    "@enzedonline/quill-blot-formatter2": "^3.0.0",
    "dotenv": "^16.6.1",
    "json-server": "^1.0.0-beta.3",
    "jwt-decode": "^4.0.0",
    "leaflet": "^1.9.4",
    "ngx-quill": "^28.0.1",
    "quill": "^2.0.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-eslint/builder": "^19.8.1",
    "@angular-eslint/eslint-plugin": "^19.8.1",
    "@angular-eslint/eslint-plugin-template": "^19.8.1",
    "@angular-eslint/schematics": "^19.8.1",
    "@angular-eslint/template-parser": "^19.8.1",
    "@angular/build": "^20.1.6",
    "@angular/cli": "^20.1.6",
    "@angular/compiler-cli": "^20.1.7",
    "@types/jasmine": "~5.1.9",
    "@types/leaflet": "^1.9.20",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^8.0.3",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3"
  }
}
